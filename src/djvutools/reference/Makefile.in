%%%include <paths>

SHELL=/bin/sh
prefix=@%prefix%@
bindir=@%PROJECT_PREFIX%@/bin
libdir=@%PROJECT_PREFIX%@/lib
incdir=@%PROJECT_PREFIX%@/include
THREADS=@%threads%@
DEFS=@%DEFS%@ @%DEFSTHREADS%@
INCS=$(DJVUAPI_INC) $(LIBDJVUXX_INC) @%INCS%@
LDFLAGS=
LIBS=@%LIBS%@ @%LIBSTHREADS%@ @%LIBJPEG%@ @%libmath%@
