$(BINPATH)/ppmcoco: $(PPMCOCOOBJS) $(LIB)
	if [ -n "$(RPO)" ] ; then $(RPO) $(PPMCOCOOBJS) $(LIB) ; fi
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o $@  $(PPMCOCOOBJS) $(LIB) $(LIBS)

$(BINPATH)/annotate: $(ANNOTATEOBJS) $(LIB)
