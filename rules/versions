%%%include <paths>

SDKVERSION=@%version%@


%%%BEGIN_REQUIRE(@%LIBJPEG%@)
LIBJPEGSO=$(LIBPATH)/libjpeg.so
LIBJPEGSONAME=libjpeg.so.6a
LIBJPEGSOLINK=$(LIBPATH)/$(LIBJPEGSONAME)
JPEG=-L$(LIBPATH) -ljpeg
%%%END_REQUIRE(@%LIBJPEG%@)

%%%BEGIN_REQUIRE(@%EXPERVISIONRTK@)
EXPERVISIONRTKSO=$(LIBPATH)/expervision-rtk.so
EXPERVISIONRTKSONAME=expervision-rtk.so.$(SDKVERSION)
EXPERVISIONRTKSOLINK=$(LIBPATH)/$(EXPERVISIONRTKSONAME)
RTK=-L./TOPDIR/SRCDIR/@%RTK%@ -lexpervision-rtk
%%%END_REQUIRE(@%EXPERVISIONRTK@)

%%%BEGIN_REQUIRE(@%LIBICONV%@)
LIBICONVSO=$(LIBPATH)/libiconv.so
LIBICONVSONAME=libiconv.so.1.5.1
LIBICONVSOLINK=$(LIBPATH)/libiconv.so.1.5.1
ICONV=-L$(LIBPATH) -liconv
%%%END_REQUIRE(@%LIBICONV%@)

%%%BEGIN_REQUIRE(@%LIBTIFF%@)
LIBTIFFSO=$(LIBPATH)/libtiff.so
LIBTIFFSONAME=libtiff.so.3
LIBTIFFSOLINK=$(LIBPATH)/libtiff.so.3.5.4
TIFF=-L$(LIBPATH) -ltiff
%%%END_REQUIRE(@%LIBTIFF%@)

%%%BEGIN_REQUIRE(@%CXXPIC_SET%@)
LIBDJVURENDERSO=$(LIBPATH)/libdjvurender.so
LIBDJVURENDERSONAME=libdjvurender.so.$(SDKVERSION)
LIBDJVURENDERSOLINK=$(LIBPATH)/$(LIBDJVURENDERSONAME)
DJVURENDER=-L$(LIBPATH) -ldjvurender $(JPEG)

LIBDJVUMULTISO=$(LIBPATH)/libdjvumulti.so
LIBDJVUMULTISONAME=libdjvumulti.so.$(SDKVERSION)
LIBDJVUMULTISOLINK=$(LIBPATH)/$(LIBDJVUMULTISONAME)
DJVUMULTI=-L$(LIBPATH) -ldjvumulti $(DJVURENDER) $(ICONV) $(JPEG) $(TIFF)

LIBDJVUDECODESO=$(LIBPATH)/libdjvudecode.so
LIBDJVUDECODESONAME=libdjvudecode.so.$(SDKVERSION)
LIBDJVUDECODESOLINK=$(LIBPATH)/$(LIBDJVUDECODESONAME)
DJVUDECODE=-L$(LIBPATH) -ldjvudecode $(DJVUMULTI)

LIBDJVUBITONALSO=$(LIBPATH)/libdjvubitonal.so
LIBDJVUBITONALSONAME=libdjvubitonal.so.$(SDKVERSION)
LIBDJVUBITONALSOLINK=$(LIBPATH)/$(LIBDJVUBITONALSONAME)

LIBDJVUAPISO=$(LIBPATH)/libdjvuapi.so
LIBDJVUAPISONAME=libdjvuapi.so.$(SDKVERSION)
LIBDJVUAPISOLINK=$(LIBPATH)/$(LIBDJVUAPISONAME)
%%%END_REQUIRE(@%CXXPIC_SET%@)

%%%BEGIN_REQUIRE(@%DYNAMICENCODELIBS%@)
DJVUBITONAL=-L$(LIBPATH) -ldjvubitonal $(DJVUDECODE)
%%%END_REQUIRE(@%DYNAMICENCODELIBS%@)
%%%BEGIN_REQUIRE!(@%DYNAMICENCODELIBS%@)
DJVUBITONAL=-L$(LIBPATH) -ldjvubitonal -ljb2 $(DJVUDECODE)
%%%END_REQUIRE!(@%DYNAMICENCODELIBS%@)

%%%BEGIN_REQUIRE(@%DYNAMICENCODELIBS%@)
DJVUAPI=-L$(LIBPATH) -ldjvuapi $(DJVUBITONAL)
%%%END_REQUIRE(@%DYNAMICENCODELIBS%@)
%%%BEGIN_REQUIRE!(@%DYNAMICENCODELIBS%@)
DJVUAPI=-L$(LIBPATH) -ldjvudocument -lmaskfind -ldjvuphoto $(DJVUBITONAL)
%%%END_REQUIRE!(@%DYNAMICENCODELIBS%@)

